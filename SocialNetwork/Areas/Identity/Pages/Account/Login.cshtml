@page
@model LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="form-container">
    <section>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>

            <div class="input-group">
                <label asp-for="Input.Email">E-post</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="error-text"></span>
            </div>

            <div class="input-group">
                <label asp-for="Input.Password">Lösenord</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" placeholder="lösenord" />
                <span asp-validation-for="Input.Password" class="error-text"></span>
            </div>

            <div class="checkbox-group">
                <input class="checkbox-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe"> @Html.DisplayNameFor(m => m.Input.RememberMe)</label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary">Logga in</button>

            <div class="link-container">
                <a id="forgot-password" asp-page="./ForgotPassword" class="auth-link">Glömt lösenord?</a>
                <br>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">Registrera ny användare</a>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
