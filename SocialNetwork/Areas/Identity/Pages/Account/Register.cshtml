@page
@model RegisterModel
@{
    ViewData["Title"] = "Skapa nytt konto";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<div class="form-container">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>

        <div class="input-group">
            <label asp-for="Input.Email">E-post</label>
            <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="error-text"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.Password">Lösenord</label>
            <input asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="lösenord" />
            <span asp-validation-for="Input.Password" class="error-text"></span>
        </div>

        <div class="input-group">
            <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
            <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="lösenord" />
            <span asp-validation-for="Input.ConfirmPassword" class="error-text"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-primary">Skapa användare</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}