<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lunarspace</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
<header>
    <nav class="navbar">
        <div class="container">
            <a class="logo" asp-controller="Post" asp-action="Index">Lunarspace</a>
            <button class="nav-toggle" aria-label="Toggle navigation">
                ☰
            </button>
            <ul class="nav-links">
                <li><a asp-controller="Post" asp-action="Index">Klottervägg</a></li>
                <li><a asp-controller="Profile" asp-action="Index">Profil</a></li>
                @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <li><a asp-controller="Profile" asp-action="Members">Medlemmar</a></li>
                    }
                @if (User?.IsInRole("Admin") == true)
                {
                    <li><a asp-controller="Admin" asp-action="Users">Admin</a></li>
                }
            </ul>
            <div class="user-controls">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - Projektuppgift
        </div>
    </footer>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleButton = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");

    toggleButton.addEventListener("click", function () {
      navLinks.classList.toggle("active");
    });
  });
</script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>